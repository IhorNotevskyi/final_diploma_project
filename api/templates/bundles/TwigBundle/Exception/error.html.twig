{% extends 'layout.html.twig' %}

{% block main %}
    <div class="container text-center">
        <h1 class="display-3" style="margin: 80px 0 40px"><span class="text-danger">Oops!</span> An Error Occurred</h1>
        <h2 class="display-4">The server returned a</h2>
        <h2 class="display-4 font-weight-bold" style="margin: 40px 0">"{{ status_code }} {{ status_text }}"</h2>
        <h4 class="text-muted" style="line-height: 180%; letter-spacing: .9px">
            Something is broken. Please let us know what you were doing when this error occurred.
            We will fix it as soon as possible. Sorry for any inconvenience caused.
        </h4>
    </div>
{% endblock %}