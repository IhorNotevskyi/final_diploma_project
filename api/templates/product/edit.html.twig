{% extends 'layout.html.twig' %}

{% block main %}
    <h1 class="text-center" style="margin-bottom: 30px">Edit product #{{ product.id }}</h1>
    <div class="container" style="max-width: 50%">
        {{ form(product_form, {'attr': {'novalidate': 'novalidate'}}) }}
        <div class="text-center">
            <img src="{{ asset(product.image|replace({'http://localhost:8000/': ''})) }}" alt="Image" style="max-width: 400px">
        </div>
    </div>
{% endblock %}